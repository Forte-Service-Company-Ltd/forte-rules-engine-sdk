{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["diff", "node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
