{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["diff", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "index.ts"]
}
